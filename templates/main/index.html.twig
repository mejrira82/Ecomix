{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="mt-4 mb-2 col-lg-6 col-sm-12">
				<h1 class="text-center text-uppercase">Welcome on our store</h1>
				<p class="text-center text-muted">Lorem ipsum dolor sit amet consectetur adipisicing elit. Reiciendis tempora, rem libero odio ea aut vero laborum, illo at magni veniam expedita assumenda fuga ab facere, dignissimos corporis quam adipisci!</p>
			</div>
		</div>
        <div class="row justify-content-center">
            {% for category in category %}
			{% if category.parent == null %}
				<div clas"col-12">
					<h2 class="mb-3">{{category.name}} </h2>
				</div>
			{% else %}
				<div class="col-3">
					<div class="card mb-4">
						<div class="card-body">
							<h5 class="card-title">{{category.name}}</h5>
							<a href="{{path('category_list',{slug:category.slug})}}" class="btn btn-brand text-uppercase">explore prodcuts</a>
						</div>
					</div>
				</div>
			{% endif %}
		{% endfor %}
        </div>
	</div>

{% endblock %}

