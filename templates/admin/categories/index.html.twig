{% extends 'base.html.twig' %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-uppercase text-center">Categories list</h1>
			</div>
			<div class="col-12">
				<table class="table text-center">
					<thead>
						<tr>
							<th>ID</th>
							<th>Name</th>
							<th>Parent</th>
							<th>Slug</th>
						</tr>
					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<td>{{ categorie.id }}</td>
								<td>{{ categorie.name }}</td>
								<td>
									{% if categorie.parent is not null %}
										{{ categorie.parent.name }}
									{% endif %}
								</td>
								<td>{{ categorie.slug }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}


