{% if pages > 1 %}
	<div class="pagination-nav mt-3 mb-3 ">
		<ul class="pagination justify-content-center">
			{% if currentPage > 1 %}
				<li class="page-item">
					<a class="page-link " href="{{path(path,{slug:slug,page:currentPage - 1})}}">Previous</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">Previous</a>
				</li>
			{% endif %}
			{% for page in 1..pages %}
				<li class="page-item {{(page == currentPage) ? 'active' : '' }}">
					<a class="page-link px-3" href="{{path(path,{slug:slug,page:page})}}">{{page}}</a>
				</li>
			{% endfor %}
			{% if currentPage < pages %}
				<li class="page-item">
					<a class="page-link" href="{{path(path,{slug:slug,page:currentPage + 1})}}">Next</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">Next</a>
				</li>
			{% endif %}
		</ul>
	</div>
{% endif %}

